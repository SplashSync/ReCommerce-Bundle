{
    "name":                 "splash/recommerce",
    "description":          "Splash ReCommerce OpenAPI Connector (Embedded)",

    "type":                 "symfony-bundle",
    "license":              "MIT",
    "minimum-stability":    "dev",
    "prefer-stable":        true,

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "BadPixxel",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": { 
            "Splash\\Connectors\\ReCommerce\\":     "src/"
        }
    },
    
    "autoload-dev": {
        "classmap": [ "tests/Kernel.php" ],
        "files":    [ 
            "vendor/splash/phpcore/inc/Splash.Inc.php",
            "vendor/splash/php-bundle/src/Tests/KernelTestCase.php"
        ],
        "psr-4": { 
            "Splash\\Connectors\\ReCommerce\\Test\\":     "tests/"
        }        
    },

    "require": {
        "php":                                          "^8.0",
        "ext-json":                                     "*",
        "splash/php-bundle":                            "dev-master",
        "splash/openapi":                               "dev-master"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":                            "~2.0",
        "splash/console":                               "dev-master",

        "symfony/symfony":                              "^3.4|^4.4",
        "symfony/monolog-bundle":                       "*",
        "symfony/phpunit-bridge":                       "*",
        "monolog/monolog":                              "^1.0",

        "doctrine/doctrine-bundle":                     "^2.6",
        "doctrine/orm":                                 "^2.6",

        "fzaninotto/faker":                             "^1.8"
    },

    "scripts": {
        "auto-scripts": [
            "rm vendor/splash/phpcore/Tests/Tools/TestCase.php",
            "php tests/console cache:clear",
            "cd var/cache/dev && ln -sf testsKernelDevDebugContainer.xml testContainer.xml"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }

}
